# EditorConfig for Python, HTML, CSS and JavaScript

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 79
indent_size = 4

[*.html]
indent_size = 2
max_line_length = off

[*.css]
[*.scss]
indent_size = 2

[*.js]
[*.jsx]
[*.ts]
[*.tsx]
indent_size = 2

[*.json]
indent_size = 2

[*.yaml]
[*.yml]
indent_size = 2
